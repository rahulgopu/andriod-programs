<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB6363"
    tools:context="edu.niu.cs.z1840816.gradecalculator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:text="CSCI 240"
            android:textColor="#ffffff"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quiztitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            android:inputType="numberDecimal"
            android:text="ENTER THE QUIZ SCORES"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/quiz1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiztitle"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 1 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="95dp"
            android:layout_toRightOf="@id/quiz1"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 2 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz2"
            android:layout_alignStart="@+id/quiz1"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 3 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/quiz3"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 4 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz4"
            android:layout_alignStart="@+id/quiz1"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 5 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz4"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/quiz5"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 6 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz6"
            android:layout_alignStart="@+id/quiz1"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 7 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz6"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/quiz7"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 8 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz8"
            android:layout_alignStart="@+id/quiz1"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 9 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz8"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/quiz9"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 10 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz10"
            android:layout_alignStart="@+id/quiz1"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 11 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/quiz12"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz10"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/quiz11"
            android:gravity="center_horizontal"
            android:hint="Enter Quiz 12 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />


        <TextView
            android:id="@+id/examtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/quiz12"
            android:text="ENTER THE EXAM SCORES"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/exam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/examtitle"
            android:gravity="center_horizontal"
            android:hint="Enter Exam 1 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/exam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam1"
            android:layout_alignStart="@+id/exam1"
            android:gravity="center_horizontal"
            android:hint="Enter Exam 2 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/exam3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam2"
            android:layout_alignStart="@+id/exam2"
            android:gravity="center_horizontal"
            android:hint="Enter Exam 3 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <TextView
            android:id="@+id/assignmenttitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/exam3"
            android:text="ENTER THE ASSIGNMENT SCORES"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/assignment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignmenttitle"
            android:gravity="center_horizontal"
            android:hint="Assignment 1 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/assignment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignmenttitle"
            android:layout_toRightOf="@+id/assignment1"
            android:gravity="center_horizontal"
            android:hint="Assignment 2 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/assignment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignment2"
            android:layout_alignStart="@+id/assignment1"
            android:gravity="center_horizontal"
            android:hint="Assignment 3 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/assignment4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignment2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/assignment3"
            android:gravity="center_horizontal"
            android:hint="Assignment 4 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/assignment5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignment4"
            android:layout_alignStart="@+id/assignment1"
            android:gravity="center_horizontal"
            android:hint="Assignment 5 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/assignment6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignment4"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/assignment5"
            android:gravity="center_horizontal"
            android:hint="Assignment 6 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/assignment7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignment6"
            android:layout_alignStart="@+id/assignment1"
            android:gravity="center_horizontal"
            android:hint="Assignment 7 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/assignment8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignment6"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/assignment7"
            android:gravity="center_horizontal"
            android:hint="Assignment 8 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/assignment9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignment8"
            android:layout_alignStart="@+id/assignment1"
            android:gravity="center_horizontal"
            android:hint="Assignment 9 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/assignment10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignment8"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/assignment9"
            android:gravity="center_horizontal"
            android:hint="Assignment 10 Score"
            android:inputType="numberDecimal"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <Button
            android:id="@+id/quizSubmitButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/assignment10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.6"
            android:background="@color/colorPrimaryDark"
            android:onClick="calculate"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </RelativeLayout>


</ScrollView>